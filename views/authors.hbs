<h1>Authors</h1>
<h3>Number of Authors: {{authors.length}}</h3>
<br />
<div class="">
  {{#each authors}}
    <h3>{{first_name}} {{last_name}}</h3>
    <ul>
      <li>{{biography}}</li>
    </ul>
    <a href="/authors/{{id}}/edit">Edit</a>
    <form class="delete" action="/authors/{{id}}/delete?_method=DELETE" method="POST">
      <input type="submit" name="delete" value="Delete" />
    </form>
    <br />
  {{/each}}
</div>
